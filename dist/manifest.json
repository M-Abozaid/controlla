{
    "manifest_version": 2,
    "name": "Controlla",
    "description": "contol your time and be more productive",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/eventPage.js"
        ],
        "persistent": false
    },
    "icons": {
        "128": "icon128.png"
    },
    "permissions": [
        "tabs" // to make the url available in queried tabs
    ]
}
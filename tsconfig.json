{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "DOM.Iterable",
      "es2017"
    ],
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist/js",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

  },
  "compileOnSave": false,
  "include": [
    "**/*.js",
    "**/*.ts",
    "./.eslint.js"
  ],
  "exclude": [
    "node_modules"
  ]
}